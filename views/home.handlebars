<h1 class="text-center">Meetup Finder</h1>

<h2>Search</h2>
<div class="card">
  <form action="/" class="card-body">
    <div class="form-group">
      <label for="date">Date</label>
      <input type="text" name="date" class="form-control datepicker">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>

<h2 class="mt-3">{{events.length}} Results</h2>
<div class="accordion" id="accordion">
  {{#each events}}
    <div class="card">
      <button class="btn card-header text-left d-flex justify-content-between align-items-center" id="event-{{@index}}" data-toggle="collapse" data-target="#detail-{{@index}}">
        <div>
          <b>{{group.name}}</b><br>
          {{name}}
        </div>
        <div>
          <b>Transit Time</b><br>
          {{transit_time}} minutes
        </div>
      </button>
      <div id="detail-{{@index}}" class="collapse" data-parent="#accordion">
        <div class="card-body">
          {{{description}}}
          <a href="{{event_url}}" target="_blank">{{event_url}}</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
